<div class="row">
      <div class="col-12">
        <h1 class="mb-4"><%= @list.name %></h1>
        
        <div class="mb-4">
          <%= link_to "Add a movie", new_list_bookmark_path(@list), class: "btn btn-custom" %>
        </div>

        <h3>Movies in this list:</h3>
        <% @list.bookmarks.each do |bookmark| %>
          <div class="movie-item">
            <div class="row">
              <div class="col-md-3">
                <img src="<%= bookmark.movie.poster_url %>" alt="<%= bookmark.movie.title %>" class="img-fluid" style="border-radius: 8px;">
              </div>
              <div class="col-md-9">
                <h4 style="color: #2c3e50;"><%= bookmark.movie.title %></h4>
                <p class="text-muted"><%= bookmark.movie.overview %></p>
                <p><strong>Rating:</strong> ‚≠ê <%= bookmark.movie.rating %>/10</p>
                <p><strong>Comment:</strong> <em><%= bookmark.comment %></em></p>
        <%= link_to "Delete", bookmark_path(bookmark), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" },class: "btn btn-danger btn-sm" %>
          </div>
        </div>
      </div>
    <% end %>
    <%= link_to "Back to lists", lists_path, class: "btn btn-secondary" %>
  </div>
</div>